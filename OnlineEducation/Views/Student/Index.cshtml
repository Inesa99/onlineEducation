<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learning Package</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="logo">LOGO</div>
            <nav class="menu">
                <a href="#">Home</a>
                <a href="#" class="active">@ViewBag.Package.Name</a>
                <a href="#">Progress</a>
                <a href="#">Settings</a>
            </nav>
        </aside>

        <main class="main-content">
            <header class="header">
                <div></div>
                <div class="student-name">@ViewBag.Student.Username</div>
            </header>

            <section class="learning-package">
                <h1>@ViewBag.Package.Name</h1>
                <div class="package-select">Full Stack Web Development</div>

                <div class="subjects">
                    @foreach (var item in ViewBag.Subjects)
                    {
                        <button> @item.Name</button>
                    }
                </div>

                <div class="topic">
                    <h2>HTML Basics</h2>
                    <div class="text-line"></div>
                    <div class="text-line"></div>
                    <div class="text-line"></div>
                    <div class="text-line"></div>
                    <div class="text-line"></div>
                    <div class="text-line short"></div>
                </div>

                <button class="next-button">Next: Take Test</button>
            </section>
        </main>
    </div>
</body>
</html>
