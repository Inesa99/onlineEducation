<h2> @ViewBag.Student.Username </h2>
<h3>Package - @ViewBag.Package.Name</h3>


<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Package - @ViewBag.Package.Name
</button>

<div class="collapse" id="collapseExample">
    <div class="card card-body">
        <ol>
            @foreach (var item in ViewBag.Subjects)
            {
                <li> @item.Name</li>
            }
        </ol>
    </div>
</div>
<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script> <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
<form method="post" action="@Url.Action("Save", "Text")">
    <textarea id="editor" name="content"></textarea>
    <button type="submit">Պահպանել</button>
</form>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        CKEDITOR.replace('editor'); // Ակտիվացնում է CKEditor-ը էջի բեռնման ավարտից հետո
    });
</script>