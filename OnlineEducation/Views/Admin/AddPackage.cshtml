@model OnlineEducation.Models.Package
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <partial name="_AdminMenu" />

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <h2>Add Package</h2>
                <form asp-action="AddPackage" asp-controller="Admin" method="post">
                    <div class="mb-4">
                        <label asp-for="Name" class="mb-2">Package Name</label> <br />
                        <input asp-for="Name" placeholder="Package name" class="w-100 form-control" />
                    </div>
                    <div class="mb-4">
                        <input type="submit" value="Add" class="btn btn-primary mb-2 w-100" />
                    </div>
                </form>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>