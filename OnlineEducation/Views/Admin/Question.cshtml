@* @model OnlineEducation.Models.Subject *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link href="~/css/adminquestion.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <partial name="_AdminMenu" />

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <h1> Հարցեր </h1>
                @foreach (var question in ViewBag.QuestionsWithoutAnswer)
                {
                    <div class="questionDiv">
                        <form asp-action="Question" asp-controller="Admin" method="post">
                            <input type="hidden" name="questionId" value="@question.Id" />
                            <h3>Հարց՝</h3>
                            <p class="mb-4">
                                @question.Description
                            </p>

                            <h3>Պատասխան՝</h3>
                            <textarea name="answer" rows="3" required></textarea>

                            <div class="mb-4">
                                <input type="submit" value="Ուղարկել" class="btn btn-primary my-4 w-100" />
                            </div>
                        </form>
                    </div>
                }
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


               