@* @model OnlineEducation.Models.Subject *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <partial name="_AdminMenu" />

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <h1> Հարցեր </h1>
                @foreach (var question in ViewBag.QuestionsWithoutAnswer)
                {
                    <form asp-action="Question" asp-controller="Admin" method="post">
                        <input type="hidden" name="questionId" value="@question.Id" />
                        <h3>Հարց՝</h3>
                        <p>
                            @question.Description
                        </p>
                        <h3>Պատասխան՝</h3>
                        <textarea name="answer" rows="3" required></textarea>

                        <input type="submit" value="Ուղարկել"/>
                    </form>
                }

                <h2 class="my-4">Պատասխանված հարցեր</h2>
                @foreach (var q in ViewBag․QuestionsWithAnswer)
                {
                    <div class="card my-2 p-3 bg-light">
                        <h5>@q.Text</h5>
                        <p><strong>Պատասխան:</strong> @q.Answer</p>
                    </div>
                }
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>